{
  "model": {
    "vocab_size": 16384,
    "max_seq_len": 1024,
    "d_model": 768,
    "n_heads": 16,
    "d_ffn": 3072,
    "dropout": 0.2,
    "attention_dropout": 0.1,
    "initializer": {
      "Uniform": {
        "min": -0.5,
        "max": 0.5
      }
    },
    "padding_token": 3
  },
  "optimizer": {
    "grad_clipping": null,
    "beta_1": 0.9,
    "beta_2": 0.999,
    "epsilon": 0.00001,
    "weight_decay": 0.0001
  },
  "num_epochs": 100,
  "batch_size": 10,
  "num_workers": 8,
  "seed": 42,
  "lr_scheduler": {
    "initial_lr": 0.00024,
    "num_iters": 8,
    "min_lr": 0.0
  }
}